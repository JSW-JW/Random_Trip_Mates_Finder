<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlinmessenger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.kotlinmessenger.view.trip.CategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kotlinmessenger.view.chat.LatestMessagesActivity">
        </activity>
        <activity android:name="com.example.kotlinmessenger.view.auth.RegisterActivity" />
        <activity android:name="com.example.kotlinmessenger.view.auth.LoginActivity" />
        <activity android:name="com.example.kotlinmessenger.view.chat.NewMessageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kotlinmessenger.view.chat.LatestMessagesActivity" />
        </activity>
        <activity android:name="com.example.kotlinmessenger.view.chat.ChatLogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kotlinmessenger.view.chat.LatestMessagesActivity" />
        </activity>
    </application>

</manifest>